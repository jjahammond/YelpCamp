<%- include("partials/header") %>

  <div class="background-image">
    <div class="container auth-form">
      <div class="well well-new">
        <h1>Create a new campground</h1>
        <form class="" action="/campgrounds" method="post">
          <div class="form-group">
            <input class="form-control" type="text" placeholder="name" name="name">
          </div>
          <div class="form-group">
            <input class="form-control" type="text" placeholder="image url" name="image">
          </div>
          <div class="form-group">
            <textarea class="form-control" rows="8" cols="80" placeholder="description" name="description"></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-default btn-auth">Submit</button>
          </div>
        </form>

        <a href="/campgrounds">Back</a>
      </div>
    </div>
  </div>

<%- include("partials/footer") %>
