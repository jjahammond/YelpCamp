<%- include("partials/header") %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Create a new campground</h1>

    <div style="width: 30%; margin: 30px auto;">
      <form class="" action="/campgrounds" method="post">
        <div class="form-group">
          <input class="form-control" type="text" placeholder="name" name="name">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="image url" name="image">
        </div>
        <div class="form-group">
          <textarea class="form-control" rows="8" cols="80" placeholder="description" name="description"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>

      <a href="/campgrounds">Campgrounds</a>
      <a href="/">Home</a>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
