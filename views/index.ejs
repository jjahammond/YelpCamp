<%- include("partials/header") %>

<header class="jumbotron" id="home-scroll">
  <div class="container">
    <h1>Welcome to YelpCamp</h1>
    <p>View our hand-picked campgrounds from all over the world</p>
    <p>
      <a class="btn btn-default btn-lg btn-dark" href="#campground-scroll">See our campgrounds</a>
      <a class="btn btn-default btn-lg btn-dark" href="/campgrounds/new">Add new campground</a>
    </p>
  </div>
</header>

<div id="campground-scroll"></div>

<div class="container" id="campgrounds">
  <div class="row" style="display: flex; flex-wrap: wrap">
    <% campgrounds.forEach((campground) => { %>
      <div class="col-sm-6 col-md-4">
        <a class="a-thumbnail" href="/campgrounds/<%= campground._id %>">
          <div class="thumbnail">
            <img src="<%= campground.image %>">
            <div class="caption">
              <div class="row">
                <div class="col-xs-6">
                  <h4><%= campground.name %></h4>
                  <p>Added by: <strong><em><%= campground.addedBy.username %></em></strong></p>
                </div>
                <div class="col-xs-6">
                  <p>Price: <strong><em>Â£9.00/night</em></strong></p>
                  <p><strong><em>02 Jan, 2020</em></strong></p>
                </div>
              </div>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</div>

<%- include("partials/footer") %>
